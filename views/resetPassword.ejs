                    <div><label for="email" class="block text-sm font-medium text-gray-700"> Enter New Password </label>
                        <div class="mt-1"><input type="password"
                                class="appearance-none block w-full px-3 py-4 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                        </div>
                    </div>
                    <div><label for="password" class="block text-sm font-medium text-gray-700"> Re-Enter New Password
                        </label>
                        <div class="mt-1"><input type="password"
                                class="appearance-none block w-full px-3 py-4 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                        </div>
                    </div>

                    <div>
                        <button  class="w-full flex justify-center py-4 px-4 border border-transparent rounded-md shadow-sm text-md font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Submit </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
